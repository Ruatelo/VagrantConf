NODE_COUNT = 1

Vagrant.configure("2") do |config|
  (1..NODE_COUNT).each do |i|
    config.vm.define "kali-#{i}" do |subconfig|
      subconfig.vm.box = "kalilinux/rolling"
      subconfig.vm.hostname = "kaliVM-#{i}"

      subconfig.vm.provider "vmware_desktop" do |v|
        v.memory = 2048
        v.cpus = 1
      end

      # Provision with ansible_local
      subconfig.vm.provision "ansible_local" do |a|
        a.playbook = "setupkali.yml"
      end
    end
  end
end
